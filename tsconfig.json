{
  "extends": "@lifeomic/typescript-config",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "noEmit": true,
    "target": "es2020",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": ".",
  },
  "include": [
    "./*.ts"
  ]
}
